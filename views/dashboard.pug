doctype html
html(lang="en")
    meta( 
        content="width=device-width, initial-scale=1.0",
        name="viewport"
        )   
    head
        title E-Corp Bank Dashboard
        link(
          type="text/css" 
          rel="stylesheet" 
          href="project.css"
         )
    style.

        h1 {
            position: absolute;
            color: red;
            top: -150px;
            text-align: center;
            right: 250px;
        }

        h3 {
            color: white;
            text-align: center;
            right: 250px;   
            margin-bottom: 1em;
            margin-top: 1em;
            font-size: 35px;
            text-decoration: underline;
            text-decoration-thickness: 2px;

        }

        h4 {
            color: white;
            text-align: center;
            right: 250px;
            margin-top: 1em;
            font-size: 22.5px;
            color: yellow;
            
        }

        th {
            color: white;
            text-align: center;
            margin-right: 2em;
            margin-left: 2em;
        }

        td {
            color: white;
            text-align: center;
            margin-right: 2em;
            margin-left: 2em;
        }
        .dashboard-content {
            position: relative;
            top: 250px;
        }

        .account-summary {
            font-size: 60px;
        }

    body.home  
        img.websiteicon(
            alt="Evil Corporation" 
            height="25%" 
            src="ecorp.png"
            )
        h2#hiddenTruth vil Corporation

        nav.navbar-left
            ul
                a.navmenu(href="/") 
                    li Home
                a.navmenu(href="/balance")
                    li Withdraw/Deposit
                a.navmenu(href="/logout") 
                    li Logout
        nav.navbar-right
            ul        
                a.login(href="/transfer") 
                    li Transfer Money
                a.login(href="/payment") 
                    li Make Payment
                a.login(href="/application")
                    li Apply for New Account

    div.dashboard-content
        h1 Welcome #{user.name}
        section
                h3.account-summary Account Summary
        if bankAccounts && bankAccounts.length
                .bank-accounts
                h3 Bank Accounts
        each account in bankAccounts
                div.account-card
                h4 Account #{account.account_number}
                p Balance: $#{account.balance}  
                .transactions
                h3 Recent Transactions  
                    if account.transactions && account.transactions.length
                table
                    thead
                        tr
                            th Date
                            th Description
                            th Amount
                        tbody
                    each transaction in account.transactions
                        tr
                            td= new Date(transaction.date).toLocaleDateString()
                            td= transaction.description
                            td(class=transaction.amount < 0 ? 'negative' : 'positive')
                                = `$${Math.abs(transaction.amount)}`
        else
            p No recent transactions
        if creditCards && creditCards.length
                .credit-cards
        h3 Credit Cards
        each card in creditCards
                .card-info
                h4 #{card.card_type}
                p Balance: $#{card.balance}
                p Credit Limit: $#{card.credit_limit}
                p Interest Rate: #{card.interest_rate}%

        if loans && loans.length
                .loans
        h3 Loans
        each loan in loans  
                .loan-info
                h4 #{loan.loan_type} Loan
                p Original Amount: $#{loan.loan_amount}
                p Outstanding Balance: $#{loan.outstanding_balance}
                p Interest Rate: #{loan.interest_rate}%
                    if loan.payment_schedule && loan.payment_schedule.length
                .payment-schedule
                h3 Payment Schedule
                table
                    thead
                        tr
                            th Due Date
                            th Amount
                            th Status
                    tbody
                    each payment in loan.payment_schedule
                        tr
                            td= new Date(payment.date).toLocaleDateString()
                            td= `$${payment.amount}`
                            td(class=payment.status.toLowerCase())= payment.status
        footer
         p Â© 2024 E-Corp Bank. All rights reserved.

